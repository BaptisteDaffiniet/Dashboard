        Liste de tout les widgets implémentés pouvant être utilisés
    </div>

    <div class="form_display">
        <div class="sub_title">
            weather
        </div>
        <div>
            {{ form_start(form_weather) }}
            <div>
                {{ form_row(form_weather.town, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div>
                {{ form_label(form_weather.timer) }}
                {{ form_widget(form_weather.timer, {'attr': {'class': 'form-control'}}) }}
                <div>
                    {{ form_errors(form_weather.timer) }}
                </div>
            </div>
            <div>
                <button type="submit">
                    ajouter le widget
                </button>
            </div>
            {{ form_end(form_weather) }}
        </div>
    </div>

