{% extends 'base.html.twig' %}

{% block title %}Gestion des widgets{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/widget_form.css') }}" type="text/css" rel="stylesheet">
{% endblock %}


{% block body %}
