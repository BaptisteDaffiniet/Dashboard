{% extends 'base.html.twig' %}

{% block title %}création d'un service{% endblock %}

{% block body %}
    <div>création d'un service</div>
    {{ form_start(form) }}
    <div class="form_group">
        <div>
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div>
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit">
                créer le service
            </button>
        </div>
    </div>
    {{ form_end(form) }}
    <a href="{{ path('services') }}">page des services</a>
{% endblock %}
