{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div>Formulaire d'inscription</div>
    {{ form_start(form) }}
    <div class="form_group">
        <div>
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div>
            {{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div>
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit">
                Register
            </button>
        </div>
    </div>
    {{ form_end(form) }}
    <a href="{{ path('landing') }}">page d'acceuil</a>
{% endblock %}
